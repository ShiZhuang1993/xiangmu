<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_period_particulars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bawei.text.Recommend_Fragment_Adapter.PeriodParticulars">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/particulars_cover_titlea"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@color/qianhui"
            android:gravity="center"
            android:text="测试"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/particulars_cover_jixuyuedu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/titlecolor"
            android:gravity="center"
            android:text="开始阅读"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/particulars_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:background="#20000000"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/particulars_cover_tablayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:xTabIndicatorColor="@color/jiuhuang"
                app:xTabIndicatorWidth="50dp"></com.androidkun.xtablayout.XTabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/particulars_cover_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/particulars_cover_guanzhu"
            style="@style/textjuli"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_topic_detail_subscribe_button" />

        <ImageView
            android:id="@+id/particulars_cover_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_album_nav_back_normal" />

        <TextView
            android:id="@+id/particulars_cover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/particulars_cover_fanhui"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:text="12313213131"
            android:textColor="@color/bai"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>
